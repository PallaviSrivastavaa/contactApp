<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Activity_Contact_details"
    tools:ignore="ExtraText"

   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent"

        >

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:id="@+id/profileIv"


            android:layout_height="@dimen/_250sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/frog2"
            />


        <TextView

            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/behance"
            android:text="Pallavi Srivastava"
            android:textAlignment="center"
            android:textColor="@color/magenta"
            android:textSize="@dimen/_20sdp" />
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_23sdp"
    app:cardBackgroundColor="@color/beige"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="@dimen/_20sdp">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige"


        android:padding="@dimen/_10sdp">

        <TableRow>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Phone"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneTv"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:text="0177000800" />
        </TableRow>


        <TableRow>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Email"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/emailTv"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:text="Pallavi@gmail.com" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Added Time"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addedTimeTv"

                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:text="0177000800" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Updated Time"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updatedTimeTv"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/magenta"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:text="0177000800" />
        </TableRow>

        <TableRow
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp">


        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/_124sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@color/magenta"
            android:elevation="@dimen/_20sdp"
            android:shadowColor="@color/black"
            android:text="back"


            android:textColor="@color/beige"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />



    </LinearLayout>





</RelativeLayout>