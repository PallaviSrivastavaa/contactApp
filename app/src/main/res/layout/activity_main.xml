<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:backgroundTint="@color/beige"
    tools:context=".MainActivity">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_element_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/_49sdp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/magenta"

        android:backgroundTint="@color/magenta"

        android:contentDescription="@string/todo"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/daco" />

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/magenta">

        <TextView
            android:id="@+id/heading"
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/behance"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/_5sdp"
            android:text="  Contact App"

            android:textAlignment="textStart"
            android:textColor="@color/beige"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/deleteAll"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/_270sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:srcCompat="@drawable/baseline_deleteall_24" />
    </RelativeLayout>


</RelativeLayout>