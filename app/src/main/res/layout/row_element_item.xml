<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/beige"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardElevation="@dimen/_6sdp"

    >


    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige">


        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/contact_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"

            android:src="@drawable/baseline_person_24"
            app:civ_border_color="@color/magenta"
            app:civ_border_width="@dimen/_1sdp" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_53sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/contact_name"
            android:textColor="@color/magenta"
            android:textSize="@dimen/_14sdp"
            tools:ignore="TextSizeCheck" />


        <ImageView
            android:id="@+id/contact_number_dial"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_11sdp"

            android:contentDescription="@string/phonecall"
            android:src="@drawable/baseline_call_24" />

        <ImageView
            android:id="@+id/contactDelete"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_215sdp"
            android:layout_marginTop="@dimen/_11sdp"

            android:contentDescription="@string/phonecall"
            android:src="@drawable/baseline_delete_24" />

        <ImageView
            android:id="@+id/contactEdit"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_11sdp"
            app:srcCompat="@drawable/baseline_mode_edit_24" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>